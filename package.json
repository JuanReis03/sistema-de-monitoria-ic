{
  "name": "@sistema-de-monitoria-ic/root",
  "scripts": {
    "dev": "dotenv -e .env -- turbo run dev",
    "migration:gen": "cd apps/server && drizzle-kit generate",
    "migration:run": "cd apps/server && drizzle-kit migrate",
    "migration:drop": "cd apps/server && drizzle-kit drop",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:clean": "docker-compose down -v",
    "docker:logs": "docker-compose logs -f postgres",
    "db:connect": "psql -h localhost -U postgres -d sistema-de-monitoria-ic -p 5432"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "dotenv-cli": "7.4.4",
    "prettier": "^3.5.0",
    "ts-node": "^10.9.2",
    "turbo": "^2.4.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=10.2.0"
  },
  "packageManager": "npm@10.2.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@hono/zod-validator": "^0.4.3",
    "dotenv": "^16.4.7",
    "glob": "^11.0.1",
    "tss-react": "^4.9.15",
    "zod": "^3.24.2"
  }
}
